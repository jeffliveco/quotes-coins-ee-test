<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="quotesCoins" transaction-type="JTA">
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
		<class>com.quotescoins.model.Exchange</class>
		<class>com.quotescoins.model.ExchangeRate</class>
		<class>com.quotescoins.model.Rate</class>
		<properties>
			<property name="hibernate.transaction.jta.platform" value="JBossTS" />
			<property name="hibernate.ogm.datastore.provider" value="mongodb" />
			<property name="hibernate.ogm.datastore.database" value="quotes_coins" />
			<property name="hibernate.ogm.datastore.create_database"
				value="true" />
			<property name="hibernate.ogm.datastore.host" value="localhost" />
			<property name="hibernate.ogm.datastore.port" value="27017" />
		</properties>
	</persistence-unit>
</persistence>
